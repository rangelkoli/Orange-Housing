# =============================================================================
# Environment Variables Template for Google Cloud Deployment
# =============================================================================
# Copy this file to .env and fill in the values for local development.
# For production, set these values in Cloud Run environment variables.
# =============================================================================

# Django Settings
# ----------------
# Generate a secure secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=backend.settings_production
DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,.run.app,https://orange-housing-372056336740.us-central1.run.app

# CSRF Trusted Origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=https://orange-housing-372056336740.us-central1.run.app

# Database Configuration (Cloud SQL PostgreSQL)
# ----------------------------------------------
USE_CLOUD_SQL=True
DB_NAME=orange_housing
DB_USER=postgres
DB_PASSWORD=your-database-password
# For Cloud Run with Cloud SQL proxy, use Unix socket:
DB_HOST=/cloudsql/YOUR_PROJECT_ID:YOUR_REGION:YOUR_INSTANCE_NAME
# For direct connection (VPC):
# DB_HOST=10.x.x.x
DB_PORT=5432

# Cloudflare R2 Storage (for media files)
# ---------------------------------------
# R2 is S3-compatible, get credentials from Cloudflare dashboard
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
# Optional: Custom domain for public access (e.g., cdn.yourdomain.com)
R2_CUSTOM_DOMAIN=

# CORS Configuration
# ------------------
# Add your frontend domains (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://orange-housing-372056336740.us-central1.run.app/

# Security Settings
# -----------------
SECURE_SSL_REDIRECT=True

# Logging
# -------
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Stripe Prices
STRIPE_PRICE_STANDARD=your-standard-price-id
STRIPE_PRICE_FEATURED=your-featured-price-id
STRIPE_PRICE_SOCIAL_MEDIA=your-social-media-price-id

# Meta Graph API (Instagram/Facebook Automation)
META_ACCESS_TOKEN=your-access-token
META_INSTAGRAM_ACCOUNT_ID=your-instagram-account-id
META_FACEBOOK_PAGE_ID=your-facebook-page-id
